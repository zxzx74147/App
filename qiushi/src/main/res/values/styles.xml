<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ItemContent" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="CommontGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextViewUser" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ItemImage" parent="@android:style/Widget.ImageWell">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ItemCardView" parent="@style/Base.CardView">
        <item name="cardCornerRadius">@dimen/default_gap_5</item>
        <item name="cardElevation">@dimen/default_gap_3</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
