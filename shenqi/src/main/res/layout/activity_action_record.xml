<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.zxzx74147.dksq.modules.action.ActionRecordActivity" />

    </data>

    <RelativeLayout
        android:id="@+id/activity_record_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.action.ActionRecordActivity">

        <com.zxzx74147.dksq.modules.wiget.RingWidget
            android:id="@+id/ring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_gap_100"
            android:layout_marginRight="@dimen/default_gap_100" />

    </RelativeLayout>
</layout>